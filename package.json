{
  "name": "React-Starter",
  "version": "1.0.0",
  "scripts": {
    "sass": "node-sass app/style.scss app/style.css --output-style expanded",
    "browserify": "browserify app/scripts.js -t [ babelify --presets [ react ] ] -o app/scripts.min.js",
    "watch:sass": "fsmonitor -d app/ -q '+*.scss' '!app/style.scss' npm run -s sass",
    "watch:js": "fsmonitor -d app/ -q '+*.js' '!scripts.min.js' npm run browserify",
    "browsersync": "browser-sync start --files 'app/*, !app/**/*.scss, !app/scripts.js, !.git/*, app/**/*' --no-open",
    "watch": "npm run -s watch:sass & npm run -s watch:js & npm run browsersync",
    "start": "nodemon app/server.js --exec babel-node --presets es2015,stage-2,react",
    "build": "babel app -d dist --presets es2015,stage-2,react --copy-files && browserify dist/scripts.js -t [ babelify --presets [ es2015 stage-2 react ] ] -o dist/scripts.js && browserify dist/client.js -t [ babelify --presets [ es2015 stage-2 react ] ] -o dist/client.js",
    "serve": "node dist/server.js"
  },
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.17.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-2": "^6.24.1",
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "express": "^4.15.4",
    "fsmonitor": "^0.2.4",
    "node-sass": "^3.10.1",
    "nodemon": "^1.11.0",
    "nuka-carousel": "^2.2.1",
    "promise-polyfill": "^6.0.2",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-slick": "^0.14.11",
    "whatwg-fetch": "^2.0.3"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015",
            "react"
          ]
        }
      ]
    ]
  }
}
